{% extends 'MunicipalesBundle:theme:layout.html.twig' %}

{% block title %}{{ 'candidacy.step2.html_title'|trans }}{% endblock %}
{% block content %}
    <h1>{{ 'candidacy.step2.h1_title'|trans }}</h1>
    
    <p class="important">
	Sube en formato PDF  las condiciones que regulan la candidatura ciudadana:
	(Estas condiciones deber√°n ser aceptadas por cada uno de los candidatos o candidatas)
	</p>

	{{ form_start(form, { 'attr': {'class': 'form_settings'}}) }}
			
	<p>{{ form_errors(form) }}<p>
			
	{% if errors is defined and not errors is empty %}
		<div style="background-color:gold;color:black">{{ errors }}</div>
	{% endif %}
	<p>
		<span>{{ form_label(form.program, 'candidacy.step2.program'|trans) }} <a href="#">Ejemplo</a></span>
		<span>{{ form_errors(form.program) }}</span>
		{{ form_widget(form.program) }}
	</p>
	  
	<p>
		<span>{{ form_label(form.legal_conditions, 'candidacy.step2.legal_conditions'|trans) }} <a href="#">Ejemplo</a></span>
		<span>{{ form_errors(form.legal_conditions) }}</span>
		{{ form_widget(form.legal_conditions) }}
	</p>      
	
	<p>
		<span>{{ form_label(form.recall_term, 'candidacy.step2.recall_term'|trans) }} <a href="#">Ejemplo</a></span>
		<span>{{ form_errors(form.recall_term) }}</span>
		{{ form_widget(form.recall_term) }}
	</p> 

	<p>
		<span>{{ form_label(form.participatory_term, 'candidacy.step2.participatory_term'|trans) }} <a href="#">Ejemplo</a></span>
		<span>{{ form_errors(form.participatory_term) }}</span>
		{{ form_widget(form.participatory_term) }}
	</p> 
	
	<p>
		<span>{{ form_label(form.voter_conditions, 'candidacy.step2.voter_conditions'|trans) }} <a href="#">Ejemplo</a></span>
		<span>{{ form_errors(form.voter_conditions) }}</span>
		{{ form_widget(form.voter_conditions) }}
	</p> 

	<p>
		<span>{{ form_label(form.technical_constrains, 'candidacy.step2.technical_constrains'|trans) }} <a href="#">Ejemplo</a></span>
