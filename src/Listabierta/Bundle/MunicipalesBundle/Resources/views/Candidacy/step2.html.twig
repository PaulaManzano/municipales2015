{% extends 'MunicipalesBundle:theme:layout.html.twig' %}

{% block title %}{{ 'candidacy.step2.html_title'|trans }}{% endblock %}

{% form_theme form 'MunicipalesBundle:theme:forms.html.twig' %}

{% form_theme form 'MunicipalesBundle:theme:forms.html.twig' %}

{% from 'MunicipalesBundle:macros:steps.html.twig' import steps_widget %}

{% block content %}

    <section class="section-2">
      <div class="container marketing">
      
        <div class="headline">
          <h2>{{ 'home.step_h2'|trans }} 2</h2>
        </div><h3 class="featurette-headin"> <i>{{ 'home.step_2'|trans }}</i>
        </h3>

        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider2">
        
        {{ form_start(form, { 'attr': {'class': 'form_settings'}}) }}
        
        <!--    division -->
        <div class="row featurette2">
          <div class="widget-box">
            
            	

            <div class="widget-body">
              <div class="widget-main">
                <div id="fuelux-wizard-container">
                  {{ steps_widget(2) }}
                  
                  <hr>

                  <div class="step-content pos-rel">
                  
				  {% if not form.vars.valid %}
                  <div class="alert alert-danger">
                          <button data-dismiss="alert" class="close" type="button">
                            <i class="mine-icon fa fa-times"></i>
                          </button>
                          {{ form_errors(form) }}
                  </div>
                  {% endif %}
                          
                    <div data-step="1" class="step-pane active row">
                      <h2 class="lighter block greenl col-xs-10 col-sm-offset-1">{{ 'candidacy.step2.h1_title'|trans|raw }}</h2><div class="col-sm-offset-3 col-md-6 well">

			          <p class="lead2">{{ 'candidacy.step2.p1'|trans|raw }}</p>
			        </div>
        

	<div class="form-group">
			{{ form_label(form.program, 'candidacy.step2.program'|trans) }} <a 
			href="{{ asset('bundles/municipales/pdf/program_example.pdf') }}" 
			title="{{ 'candidacy.step2.program'|trans }}">Ejemplo</a>
			<span>{{ form_errors(form.program) }}</span>
			{{ form_widget(form.program) }}
	</div>
	  
	<div class="form-group">
			{{ form_label(form.legal_conditions, 'candidacy.step2.legal_conditions'|trans) }} <a 
			href="{{ asset('bundles/municipales/pdf/legal_conditions_example.pdf') }}" 
			title="{{ 'candidacy.step2.legal_conditions'|trans }}">Ejemplo</a>
			<span>{{ form_errors(form.legal_conditions) }}</span>
			{{ form_widget(form.legal_conditions) }}
	</div>    
	
	<div class="form-group">
			{{ form_label(form.recall_term, 'candidacy.step2.recall_term'|trans) }} <a 
			href="{{ asset('bundles/municipales/pdf/recall_term_example.pdf') }}" 
			title="{{ 'candidacy.step2.recall_term'|trans }}">Ejemplo</a>
			<span>{{ form_errors(form.recall_term) }}</span>
			{{ form_widget(form.recall_term) }}
	</div>

	<div class="form-group">
			{{ form_label(form.participatory_term, 'candidacy.step2.participatory_term'|trans) }} <a 
			href="{{ asset('bundles/municipales/pdf/participatory_term_example.pdf') }}" 
			title="{{ 'candidacy.step2.participatory_term'|trans }}">Ejemplo</a>
			<span>{{ form_errors(form.participatory_term) }}</span>
			{{ form_widget(form.participatory_term) }}
	</div>
	
	<div class="form-group">
			{{ form_label(form.voter_conditions, 'candidacy.step2.voter_conditions'|trans) }} <a 
			href="{{ asset('bundles/municipales/pdf/voter_conditions_example.pdf') }}" 
			title="{{ 'candidacy.step2.voter_conditions'|trans }}">Ejemplo</a>
			<span>{{ form_errors(form.voter_conditions) }}</span>
			{{ form_widget(form.voter_conditions) }}
	</div>

	<div class="form-group">
			{{ form_label(form.technical_constrains, 'candidacy.step2.technical_constrains'|trans) }} <a 
			href="{{ asset('bundles/municipales/pdf/technical_constrains_example.pdf') }}" 
			title="{{ 'candidacy.step2.technical_constrains'|trans }}">Ejemplo</a>
			<span>{{ form_errors(form.technical_constrains) }}</span>
			{{ form_widget(form.technical_constrains) }}
	</div>
					</div>
                  </div>
                </div>
                
<hr>
                <div class="wizard-actions">
                  <button class="btn btn-prev" onclick="parent.location='{{ path('municipales_candidacy_step_verify') }}'">
                    <i class="mine-icon fa fa-arrow-left"></i>
                    {{ 'candidacy.step2.previous'|trans }}
                  </button>
                  
					{{ form_widget(form.continue, { 'label': 'candidacy.step2.continue'|trans|raw, 'attr' : { 'class' : 'submit btn btn-success btn-next'} }) }}
                  
                </div>

              </div>
              <!-- /.widget-main --> </div>
            <!-- /.widget-body --> </div>
        </div>

        {{ form_rest(form) }}
			
	{{ form_end(form) }}
	
        <!--    division -->

        <!-- /END THE FEATURETTES --> </div>

	
{% endblock %}