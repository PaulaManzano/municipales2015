                  </div>
                </div>

                <hr>
                <div class="wizard-actions">
                  <button class="btn btn-prev" onclick="parent.location='{{ path('municipales_candidacy_step_conditions') }}'">
                    <i class="mine-icon fa fa-arrow-left"></i>
                    {{ 'candidacy.step1.previous'|trans }}
                  </button>
                  
                  {{ form_widget(form.continue, { 'label': 'candidacy.step1.continue'|trans|raw, 'attr' : { 'class' : 'submit btn btn-success btn-next'} }) }}
                  
                </div>
              </div>
              
              {{ form_rest(form) }}
					
			  {{ form_end(form) }}   
              <!-- /.widget-main --> </div>
            <!-- /.widget-body --> </div>
        </div>

        <!--    division -->

