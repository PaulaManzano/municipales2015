    <script>
    $(document).ready(function() 
    {
		$(document).on('submit','#town_step6', function(event)
	    {
				var levels_values = [];
				for(level = 1; level <= 6; level++)
				{
				    if($("#town_step6 .level" + level + "[type='radio']:checked").length < 1)
				    {
				    	alert('Debes seleccionar al menos una opción en la fila ' + level);

			    		event.preventDefault();
				    }

				    current = $("#town_step6 .level" + level + "[type='radio']:checked");

				    if(current)
				    {
				    	current_value = current.val();
				    }
				    else
				    {
					   current_value = -1;
				    }
				    
				    levels_values[level] = current_value;
				}

				// Check unique (xor items)
				levels_values_other = levels_values.reverse().filter(function (e, i, arr) {
				    return arr.indexOf(e, i+1) === -1;
				}).reverse();
				
				if(levels_values.length - 1 != levels_values_other.length)
				{
					//console.log(levels_values)
					//console.log(levels_values_other)
					
					alert('Las opciones entre columnas deben ser excluyentes');

		    		event.preventDefault();
				}

			    return;
	    });
    });
    
	</script>
